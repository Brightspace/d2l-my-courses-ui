{
  "name": "my-courses-widget",
  "version": "0.0.1",
  "description": "Brightspace My Courses homepage widget",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist && mkdir dist",
    "build:html": "vulcanize --strip-exclude bower_components/polymer/polymer.html --inline-script --inline-css my-courses-widget.html > ./dist/my-courses-widget.html",
    "build:minify": "vulcanize --strip-exclude bower_components/polymer/polymer.html --inline-script --inline-css my-courses-widget.html | html-minifier -c .html-minifier.conf.json > ./dist/my-courses-widget.min.html",
    "build": "npm run build:html && npm run build:minify",
    "postinstall": "bower install",
    "publish:cdn": "npm run build -s && frau-publisher",
    "serve": "npm run build && polyserve",
    "test:lint:js": "eslint *.html",
    "test": "npm run test:lint:js && npm run build && wct"
  },
  "config": {
    "frauPublisher": {
      "files": "./dist/**",
      "moduleType": "app",
      "targetDirectory": "my-courses-widget",
      "creds": {
        "key": "AKIAJPPTMUGNIRI3SB6A",
        "secretVar": "CDN_SECRET"
      },
      "devTagVar": "TRAVIS_COMMIT",
      "versionVar": "TRAVIS_TAG"
    }
  },
  "homepage": "https://github.com/Brightspace/my-courses-widget",
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/my-courses-widget.git"
  },
  "bugs": {
    "url": "https://github.com/Brightspace/my-courses-widget/issues"
  },
  "keywords": [
    "d2l",
    "homepage",
    "widget"
  ],
  "author": "D2L Corporation",
  "devDependencies": {
    "bower": "^1.7.7",
    "eslint": "^2.4.0",
    "eslint-plugin-html": "^1.4.0",
    "frau-publisher": "^2.5.3",
    "html-minifier": "^1.3.1",
    "polyserve": "^0.7.1",
    "rimraf": "^2.5.2",
    "vulcanize": "^1.14.8"
  }
}
